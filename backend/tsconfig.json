{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2022",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "@perfguardian/common": [
                "../common"
            ],
            "@/*": [
                "./src/*"
            ]
        },
        "noEmit": true,
        "incremental": true,
        "allowJs": false,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["**/*.ts", ".eslintrc.js"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
}
