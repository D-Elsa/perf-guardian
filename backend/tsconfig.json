{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2022",
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "noEmit": true,
        "incremental": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "allowJs": false,
        "skipLibCheck": true,
        "isolatedModules": true
    },
    "include": ["**/*.ts", ".eslintrc.js"],
    "exclude": ["node_modules", "src/**/*.test.ts"]
}
